#ifndef _STRUCTS_H_
#define _STRUCTS_H_

// A struct that holds business-acceptable info for an employee.
struct EmployeeData
{
   string Eid;
   string name;
   double hours;
   double wage;
   double gross;
   double FedTax;
   double SocSec;
   double netpay;
};

// A struct that holds business-acceptable info for all employees.
struct SummaryData
{
   double Gross;
   double FedTax;
   double SocSec;
   double netPay;
};
#endif
